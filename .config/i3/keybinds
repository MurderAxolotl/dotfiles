# Rotate the display
bindsym XF86TouchpadToggle exec --no-startup-id ssh -f theo@kalaris rotate

# Lock the screen
bindsym $mod+l exec --no-startup-id /home/$USER/.config/scripts/lock

# Application menu
bindsym $mod+d exec --no-startup-id rofi -show drun

# Run menu
bindsym $mod+r exec --no-startup-id rofi -show run

# Resize
bindsym $mod+Mod1+r mode "resize"

###############
## MediaKeys ##
###############

# Volume controls
bindsym XF86AudioMute exec --no-startup-id amixer sset 'Master' toggle
bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset 'Master' 5%-
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset 'Master' 5%+

bindsym $mod+i exec --no-startup-id amixer sset 'Master' 5%+
bindsym $mod+k exec --no-startup-id amixer sset 'Master' 5%-

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPause exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left focus left
bindsym $mod+Shift+Down focus down
bindsym $mod+Shift+Up focus up
bindsym $mod+Shift+Right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left move left
bindsym $mod+Down move down
bindsym $mod+Up move up
bindsym $mod+Right move right
